<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diagnostic"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/black"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout     
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="fill_horizontal" >
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:orientation="horizontal">
            
	       <Button
	             android:id="@+id/frequencyQuestionButton"
	             style="@style/QuestionButton" />    
	       <TextView
	            android:id="@+id/frequencyLabel"
	            style="@style/BareDiagLabel"
	            android:layout_width="100dp"
	            android:text="@string/frequency_label"
	            android:labelFor="@+id/frequencyInput" />
	       <EditText
	            android:id="@+id/frequencyInput"
	            style="@style/BareDiagInputText"
	            android:layout_width="100dp"
	            android:inputType="number"/>
	    
	   </LinearLayout>
	   
        <View 
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/lightBlue">
        </View>
        
	   <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right">

	       <Button 
	           style="@style/ClearButton"
	           android:id="@+id/clearButton"/>
       </LinearLayout>
	           
    </LinearLayout>
    
    <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lightBlue">
    </View>
        
	<LinearLayout style="@style/DiagInputRow">
	       
	    <Button
	         android:id="@+id/busQuestionButton"
	         style="@style/QuestionButton" />    
		<TextView
		    android:id="@+id/busLabel"
			style="@style/DiagLabel"
			android:text="@string/bus_label"
			android:labelFor="@+id/busInput" />
		<EditText
		    android:id="@+id/busInput"
		    style="@style/DiagInputText"
		    android:inputType="number" />
		<Button
             android:id="@+id/idQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/idLabel"
		    style="@style/DiagLabel"
		    android:text="@string/id_label"
		    android:labelFor="@+id/idInput"/>		
		<EditText
		    android:id="@+id/idInput"
			style="@style/DiagInputText"
			android:inputType="number"/>	
		
	</LinearLayout>
		     
    <LinearLayout style="@style/DiagInputRow">
		
        <Button
             android:id="@+id/modeQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/modeLabel"
			style="@style/DiagLabel"
			android:text="@string/mode_label"
			android:labelFor="@+id/modeInput"/>
		<EditText
		    android:id="@+id/modeInput"
		    style="@style/DiagInputText"
		    android:inputType="number"/>
		<Button
             android:id="@+id/pidQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/pidLabel"
		    style="@style/DiagLabel"
		    android:text="@string/pid_label"
		    android:labelFor="@+id/pidInput"/>
		<EditText
		    android:id="@+id/pidInput"
			style="@style/DiagInputText"
			android:inputType="number"/>	
		         
	</LinearLayout>
		     
    <LinearLayout style="@style/DiagInputRow">
		
        <Button
             android:id="@+id/payloadQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/payloadLabel"
			style="@style/DiagLabel"
			android:text="@string/payload_label"
			android:labelFor="@+id/payloadInput"/>
		<EditText
		    android:id="@+id/payloadInput"
		    style="@style/DiagInputText"
		    android:inputType="number"/>
		<Button
             android:id="@+id/factorQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/factorLabel"
		    style="@style/DiagLabel"
		    android:text="@string/factor_label"
		    android:labelFor="@+id/factorInput"/>
		<EditText
		             android:id="@+id/factorInput"
			style="@style/DiagInputText"
			android:inputType="numberDecimal"/>	
		         
    </LinearLayout>
		     
    <LinearLayout style="@style/DiagInputRow">
		
        <Button
             android:id="@+id/offsetQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/offsetLabel"
			style="@style/DiagLabel"
			android:text="@string/offset_label"
			android:labelFor="@+id/offsetInput"/>
		<EditText
		    android:id="@+id/offsetInput"
		    style="@style/DiagInputText"
		    android:inputType="numberDecimal"/>
		<Button
             android:id="@+id/nameQuestionButton"
             style="@style/QuestionButton" />
		<TextView
		    android:id="@+id/nameLabel"
		    style="@style/DiagLabel"
		    android:text="@string/name_label"
		    android:labelFor="@+id/nameInput"/>
		<EditText
		    android:id="@+id/nameInput"
			style="@style/DiagInputText"
			android:inputType="text"/>	
		         
	</LinearLayout>
		
	<LinearLayout style="@style/DiagInputRow" >
		
		<Button style = "@style/RequestButton"
		    android:id="@+id/sendRequestButton"
		    android:text="@string/requestButtonLabel" />
		
    </LinearLayout>
    
    <ScrollView 
	    android:id="@+id/responseScroll"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	
        <LinearLayout
             android:id="@+id/outputRows"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/black">
            
        </LinearLayout>
	
	</ScrollView>
	
</LinearLayout>
