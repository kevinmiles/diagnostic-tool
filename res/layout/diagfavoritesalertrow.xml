<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout   
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="fill_horizontal" >
          
          <TextView
              android:id="@+id/favoritesNameLabel"
              style="@style/FavoriteBusLabel">
          </TextView>
          
          <include layout="@layout/verticalline" />
          
          <TextView
              android:id="@+id/favoritesBusLabel"
	          style="@style/FavoriteBusLabel">
          </TextView>
          
          <include layout="@layout/verticalline" />
          
          <TextView
              android:id="@+id/favoritesIdLabel"
              style="@style/FavoriteBusLabel">
          </TextView>
          
          <include layout="@layout/verticalline" />
          
          <TextView
              android:id="@+id/favoritesModeLabel"
              style="@style/FavoriteBusLabel">
          </TextView>
          
          <include layout="@layout/verticalline" />
          
          <TextView
              android:id="@+id/favoritesPidLabel"
              style="@style/FavoriteBusLabel">
          </TextView>
          
          <include layout="@layout/verticalline" />
          
          <TextView
              android:id="@+id/favoritesPayloadLabel"
              style="@style/FavoriteBusLabel">
          </TextView>
    
    </LinearLayout>
    
    <LinearLayout   
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="fill_horizontal" >
    
          <Button
              style="@style/DiagFavoritesAlertRowButton" 
              android:id="@+id/favoritesRowDeleteButton"
              android:text="@string/diag_favorites_delete_button_label"
              android:background="@drawable/delete_button_selector" >
          </Button>
          
          <Button
              style="@style/DiagFavoritesAlertRowButton" 
              android:id="@+id/favoritesRowSelectButton"
              android:text="@string/diag_favorites_select_button_label"
              android:background="@drawable/request_button_selector" >
          </Button>
          
    </LinearLayout>
    
    <include layout="@layout/horizontalline" />
          
</LinearLayout>
      