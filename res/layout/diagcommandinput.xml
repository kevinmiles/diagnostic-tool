<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <View
            android:layout_height="20dp"
            android:layout_width="match_parent" />   
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_gravity="center_vertical" >
           
	        <Button
	             android:id="@+id/commandQuestionButton"
	             style="@style/QuestionButton" />    
	        <TextView
	            android:id="@+id/commandLabel"
	            style="@style/DiagInputLabel"
	            android:text="@string/command_label"
	            android:labelFor="@+id/commandInput" />
	        <EditText
	            android:id="@+id/commandInput"
	            style="@style/DiagInputText"/>       
	       
	    </LinearLayout>
	     
        <View
            android:layout_height="20dp"
            android:layout_width="match_parent" />            
    
</LinearLayout>